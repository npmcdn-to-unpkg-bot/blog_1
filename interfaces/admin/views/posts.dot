{{=it.header}}

        <div class="vertical_spacer"></div>

        <section id="content">

            <div class="fullwidth centered-m-h">

                <div class="dark_block">
                    <div class="vertical_spacer quarter"></div>
                </div>

                <div class="content_box box_shadow_1">

                    <div class="row padded">

                        <div class="cell col-2-3">

                            <h2>Post List:</h2>

                            <ul class="admin-posts">


                                {{~it.posts :post:index}}
                                    <li>
                                        <h4>{{= ( post.headline ? post.headline : "" )}}</h4>

                                        <p>{{= (post.body  ?   post.body.replace(/<(?:.|\n)*?>/gm, '').substring(0, 150) : "")}}..</p>
                                        <p>
                                            <a href="#" class="button3">Edit</a>
                                            <a href="#" class="button4">Delete</a>
                                        </p>

                                    </li>
                                {{~}}

                            </ul>


                        </div>


                        <div class="cell col-1-3">

                            <h3 >Notifications</h3>


                            <div class="notification">

                                some notification tingy happened
                            </div>

                            <div class="notification green">

                                some notification tingy happened
                            </div>

                            <div class="notification orange">

                                some notification tingy happened
                            </div>

                            <div class="notification red">

                                some notification tingy happened
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
{{=it.footer}}
